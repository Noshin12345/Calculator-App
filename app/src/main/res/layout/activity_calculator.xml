<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dotsTextView">
            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="textEnd"
                android:layout_below="@id/input"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dotsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#xFE19;"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:background="@color/black"
                android:layout_margin="1dp"
                app:layout_constraintTop_toBottomOf="@id/dotsTextView"
                app:layout_constraintBottom_toTopOf="@id/tableLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:background="@color/black"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/divider"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_rem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:backgroundTint="#333533"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#333533"
                    app:layout_constraintStart_toEndOf="@id/btn_rem"
                    app:layout_constraintEnd_toStartOf="@id/btn_del" />

                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="DELETE"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#333533" />

            </LinearLayout>
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/buttonsLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/black">
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button7"
                        android:text="7"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182 "
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button8"
                        android:text="8"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button9"
                        android:text="9"
                        android:layout_weight="1"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttondivide"
                        android:text="รท"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#333533"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/black">
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button4"
                        android:text="4"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button5"
                        android:text="5"

                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button6"
                        android:text="6"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonmultiply"
                        android:text="ร"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#333533"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="1">
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button1"
                        android:text="1"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button2"
                        android:text="2"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button3"
                        android:text="3"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonminus"
                        android:text="-"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#333533"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="1">
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonpoint"
                        android:text="."
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonzero"
                        android:text="0"
                        android:textSize="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#7d9182"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:id="@+id/buttonsave"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="="
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#333533"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                    <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/buttonplus"
                        android:text="+"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="#333533"
                        android:layout_margin="1dp"
                        android:layout_weight="1"> </Button>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
